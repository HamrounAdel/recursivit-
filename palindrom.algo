FUNCTION palindrome(s: string): boolean;
BEGIN
    IF (length(s) < 2) THEN
        RETURN true;
    ELSE IF (s[1] = s[length(s)]) THEN
        RETURN palindrome(copy(s, 2, length(s) - 2));
    ELSE
        RETURN false;
    END_IF
END